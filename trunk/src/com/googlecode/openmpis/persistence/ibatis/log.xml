<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Log">
    <!-- Use primitive wrapper type (e.g. Integer) as parameter and allow results to
    be auto-mapped results to Person object (JavaBean) properties -->
    <select id="getLog" parameterClass="int" resultClass="com.googlecode.openmpis.model.Log">
        SELECT
        ID as id,
        LOG as log,
        DATE as date,
        FROM LOG
        WHERE ID = #id#
    </select>

    <!-- Use Person object (JavaBean) properties as parameters for insert. Each of the
    parameters in the #hash# symbols is a JavaBeans property. -->
    <insert id="insertLog" parameterClass="com.googlecode.openmpis.model.Log">
        INSERT INTO
        LOG (LOG, DATE)
        VALUES (#log#, #date#)
    </insert>

    <!-- Use Person object (JavaBean) properties as parameters for update. Each of the
    parameters in the #hash# symbols is a JavaBeans property. -->
    <update id="updateLog" parameterClass="com.googlecode.openmpis.model.Log">
        UPDATE LOG
        SET LOG = #log#,
        DATE = #date#
        WHERE ID = #id#
    </update>

    <!-- Use Person object (JavaBean) “id” properties as parameters for delete. Each of the
    parameters in the #hash# symbols is a JavaBeans property. -->
    <delete id="deleteLog" parameterClass="int">
        DELETE LOG
        WHERE ID = #id#
    </delete>
</sqlMap>