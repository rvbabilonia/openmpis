                type="com.googlecode.openmpis.action.MessageAction"
                scope="request"
                name="messageForm"
                input="/WEB-INF/pages/sighting/sightingForm.jsp"
                validate="false"
                parameter="action">
            <forward name="list-feedback" path="/WEB-INF/pages/session/listMessages.jsp"/>
            <forward name="list-sighting" path="/WEB-INF/pages/session/listMessages.jsp"/>
            <forward name="view-message" path="/WEB-INF/pages/session/viewMessageForm.jsp"/>
            <forward name="add-sighting" path="/WEB-INF/pages/sighting/sightingForm.jsp"/>
            <forward name="add-sighting-redo" path="/WEB-INF/pages/sighting/sightingForm.jsp"/>
            <forward name="add-sighting-success" path="/WEB-INF/pages/sighting/sightingSuccess.jsp"/>
