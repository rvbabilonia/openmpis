<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>
    <form-beans>
        <form-bean
                name="feedbackForm"
                type="com.googlecode.openmpis.form.FeedbackForm"/>
        <form-bean
                name="searchForm"
                type="com.googlecode.openmpis.form.SearchForm"/>
        <form-bean
                name="loginForm"
                type="com.googlecode.openmpis.form.LoginForm"/>
        <form-bean
                name="passwordForm"
                type="com.googlecode.openmpis.form.PasswordForm"/>
        <form-bean
                name="userForm"
                type="com.googlecode.openmpis.form.UserForm"/>
        <form-bean
                name="personForm"
                type="com.googlecode.openmpis.form.PersonForm"/>
        <form-bean
                name="relativeForm"
                type="com.googlecode.openmpis.form.RelativeForm"/>
        <form-bean
                name="abductorForm"
                type="com.googlecode.openmpis.form.AbductorForm"/>
        <form-bean
                name="reportForm"
                type="com.googlecode.openmpis.form.ReportForm"/>
        <form-bean
                name="investigatorForm"
                type="com.googlecode.openmpis.form.InvestigatorForm"/>
        <form-bean
                name="messageForm"
                type="com.googlecode.openmpis.form.MessageForm"/>
    </form-beans>
    <global-exceptions>
    </global-exceptions>
    <global-forwards>
        <forward
                name="failure"
                path="/WEB-INF/errors/error.jsp"/>
        <forward
                name="expired"
                path="/WEB-INF/errors/sessionError.jsp"/>
        <forward
                name="unauthorized"
                path="/WEB-INF/errors/authorizationError.jsp"/>
    </global-forwards>
    <action-mappings>
        <action
                path="/viewHome"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/WEB-INF/pages/home.jsp"/>
        <action
                path="/viewAbout"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/WEB-INF/pages/about/about.jsp"/>
        <action
                path="/viewPrivacy"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/WEB-INF/pages/about/privacy.jsp"/>
        <action
                path="/viewTerms"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/WEB-INF/pages/about/terms.jsp"/>
        <action
                path="/viewDisclaimer"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/WEB-INF/pages/about/disclaimer.jsp"/>
        <action
                path="/viewAccessibility"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/WEB-INF/pages/about/accessibility.jsp"/>
        <action
                path="/viewSitemap"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/WEB-INF/pages/about/sitemap.jsp"/>
        <action
                path="/viewStatistics"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/WEB-INF/pages/statistics/statistics.jsp" />
        <action
                path="/viewSearch"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/WEB-INF/pages/search/searchForm.jsp"/>
        <action
                path="/viewTips"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/WEB-INF/pages/tips/tips.jsp"/>
        <action
                path="/viewLogin"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/WEB-INF/pages/session/loginForm.jsp"/>
        <action
                path="/viewFeedback"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/WEB-INF/pages/feedback/feedbackForm.jsp"/>
        <action
                path="/viewPassword"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/WEB-INF/pages/password/passwordForm.jsp"/>
        <action
                path="/viewForm"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/WEB-INF/pages/form/form.jsp"/>
        <action
                path="/viewCaseForm"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/WEB-INF/pages/form/OpenMPIS Case Form 1.0.pdf"/>
        <action
                path="/viewUserForm"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/WEB-INF/pages/form/OpenMPIS User Form 1.0.pdf"/>
        <!-- List, add, view, edit, delete and count users -->
        <action
                path="/viewUser"
                type="com.googlecode.openmpis.action.UserAction"
                scope="request"
                name="userForm"
                input="/WEB-INF/pages/session/userForm.jsp"
                validate="false"
                parameter="action">
            <forward name="list-user" path="/WEB-INF/pages/session/listUsers.jsp"/>
            <forward name="add-user"  path="/WEB-INF/pages/session/addUserForm.jsp"/>
            <forward name="add-user-redo"  path="/WEB-INF/pages/session/addUserForm.jsp"/>
            <forward name="add-user-success" path="/WEB-INF/pages/session/userSuccess.jsp"/>
            <forward name="edit-user" path="/WEB-INF/pages/session/editUserForm.jsp"/>
            <forward name="edit-user-redo" path="/WEB-INF/pages/session/editUserForm.jsp"/>
            <forward name="edit-user-success" path="/WEB-INF/pages/session/userSuccess.jsp"/>
            <forward name="delete-user" path="/WEB-INF/pages/session/deleteUserForm.jsp"/>
            <forward name="delete-user-redo" path="/WEB-INF/pages/session/deleteUserForm.jsp"/>
            <forward name="delete-user-success" path="/WEB-INF/pages/session/userSuccess.jsp"/>
            <forward name="user-statistics" path="/WEB-INF/pages/statistics/userStatistics.jsp"/>
        </action>
        <!-- List and count persons, relatives and abductors -->
        <action
                path="/viewCase"
                type="com.googlecode.openmpis.action.CaseAction"
                scope="request"
                name="investigatorForm"
                input="/WEB-INF/pages/session/investigatorForm.jsp"
                validate="false"
                parameter="action">
            <forward name="list-person" path="/WEB-INF/pages/person/listPersons.jsp"/>
            <forward name="list-person-all-missing" path="/WEB-INF/pages/person/listPersons.jsp"/>
            <forward name="list-person-missing" path="/WEB-INF/pages/person/listPersons.jsp"/>
            <forward name="list-person-familyabduction" path="/WEB-INF/pages/person/listPersons.jsp"/>
            <forward name="list-person-nonfamilyabduction" path="/WEB-INF/pages/person/listPersons.jsp"/>
            <forward name="list-person-all-found" path="/WEB-INF/pages/person/listPersons.jsp"/>
            <forward name="list-person-abandoned" path="/WEB-INF/pages/person/listPersons.jsp"/>
            <forward name="list-person-throwaway" path="/WEB-INF/pages/person/listPersons.jsp"/>
            <forward name="list-person-unidentified" path="/WEB-INF/pages/person/listPersons.jsp"/>
            <forward name="list-person-solved" path="/WEB-INF/pages/person/listPersons.jsp"/>
            <forward name="list-person-unsolved" path="/WEB-INF/pages/person/listPersons.jsp"/>
            <forward name="list-abductor" path="/WEB-INF/pages/person/listPersons.jsp"/>
            <forward name="case-statistics" path="/WEB-INF/pages/statistics/caseStatistics.jsp"/>
            <forward name="assign-investigator" path="/WEB-INF/pages/session/investigatorForm.jsp"/>
            <forward name="add-person-success" path="/WEB-INF/pages/session/personSuccess.jsp"/>
            <forward name="edit-person-success" path="/WEB-INF/pages/session/personSuccess.jsp"/>
        </action>
        <!-- Add, view, edit and delete persons -->
        <action
                path="/viewPerson"
                type="com.googlecode.openmpis.action.PersonAction"
                scope="request"
                name="personForm"
                input="/WEB-INF/pages/session/personForm.jsp"
                validate="false"
                parameter="action">
            <forward name="view-person" path="/WEB-INF/pages/person/viewPersonForm.jsp"/>
            <forward name="add-person"  path="/WEB-INF/pages/session/personForm.jsp"/>
            <forward name="add-person-redo"  path="/WEB-INF/pages/session/personForm.jsp"/>
            <forward name="edit-person" path="/WEB-INF/pages/session/personForm.jsp"/>
            <forward name="edit-person-redo" path="/WEB-INF/pages/session/personForm.jsp"/>
            <forward name="delete-person" path="/WEB-INF/pages/session/deletePersonForm.jsp"/>
            <forward name="delete-person-redo" path="/WEB-INF/pages/session/deletePersonForm.jsp"/>
            <forward name="delete-person-success" path="/WEB-INF/pages/session/personSuccess.jsp"/>
            <forward name="select-investigator" path="/viewCase.do?action=selectInvestigator"/>
            <forward name="add-relative" path="/viewRelative.do?action=newRelative"/>
        </action>
        <!-- Add, view, edit and delete relatives -->
        <action
                path="/viewRelative"
                type="com.googlecode.openmpis.action.RelativeAction"
                scope="request"
                name="relativeForm"
                input="/WEB-INF/pages/session/relativeForm.jsp"
                validate="false"
                parameter="action">
            <forward name="list-person" redirect="true" path="/viewCase.do?action=listAllMissing"/>
            <forward name="view-relative" path="/WEB-INF/pages/session/relativeForm.jsp"/>
            <forward name="add-relative"  path="/WEB-INF/pages/session/relativeForm.jsp"/>
            <forward name="add-relative-redo"  path="/WEB-INF/pages/session/relativeForm.jsp"/>
            <forward name="add-relative-success" path="/WEB-INF/pages/session/relativeSuccess.jsp"/>
            <forward name="edit-relative" path="/WEB-INF/pages/session/relativeForm.jsp"/>
            <forward name="edit-relative-redo" path="/WEB-INF/pages/session/relativeForm.jsp"/>
            <forward name="edit-relative-success" path="/WEB-INF/pages/session/relativeSuccess.jsp"/>
            <forward name="delete-relative" path="/WEB-INF/pages/session/deleteRelativeForm.jsp"/>
            <forward name="delete-relative-redo" path="/WEB-INF/pages/session/deleteRelativeForm.jsp"/>
            <forward name="delete-relative-success" path="/WEB-INF/pages/session/relativeSuccess.jsp"/>
            <forward name="select-investigator" path="/viewCase.do?action=selectInvestigator"/>
            <forward name="add-abductor" path="/viewAbductor.do?action=newAbductor"/>
        </action>
        <!-- Add, view, edit and delete abductors -->
        <action
                path="/viewAbductor"
                type="com.googlecode.openmpis.action.AbductorAction"
                scope="request"
                name="abductorForm"
                input="/WEB-INF/pages/session/abductorForm.jsp"
                validate="false"
                parameter="action">
            <forward name="view-abductor" path="/WEB-INF/pages/person/personForm.jsp"/>
            <forward name="add-abductor"  path="/WEB-INF/pages/session/abductorForm.jsp"/>
            <forward name="add-abductor-redo"  path="/WEB-INF/pages/session/abductorForm.jsp"/>
            <forward name="add-abductor-success" path="/WEB-INF/pages/session/abductorSuccess.jsp"/>
            <forward name="edit-abductor" path="/WEB-INF/pages/session/abductorForm.jsp"/>
            <forward name="edit-abductor-redo" path="/WEB-INF/pages/session/abductorForm.jsp"/>
            <forward name="edit-abductor-success" path="/WEB-INF/pages/session/abductorSuccess.jsp"/>
            <forward name="delete-abductor" path="/WEB-INF/pages/session/deleteAbductorForm.jsp"/>
            <forward name="delete-abductor-redo" path="/WEB-INF/pages/session/deleteAbductorForm.jsp"/>
            <forward name="delete-abductor-success" path="/WEB-INF/pages/session/abductorSuccess.jsp"/>
            <forward name="select-investigator" path="/viewCase.do?action=selectInvestigator"/>
        </action>
        <!-- Add, view, edit and delete progress reports -->
        <action
                path="/viewReport"
                type="com.googlecode.openmpis.action.ReportAction"
                scope="request"
                name="reportForm"
                input="/WEB-INF/pages/session/reportForm.jsp"
                validate="false"
                parameter="action">
            <forward name="list-report" path="/WEB-INF/pages/session/listReports.jsp"/>
            <forward name="view-report" path="/WEB-INF/pages/session/reportForm.jsp"/>
            <forward name="add-report"  path="/WEB-INF/pages/session/reportForm.jsp"/>
            <forward name="add-report-redo"  path="/WEB-INF/pages/session/reportForm.jsp"/>
            <forward name="add-report-success" path="/WEB-INF/pages/session/reportSuccess.jsp"/>
            <forward name="edit-report" path="/WEB-INF/pages/session/reportForm.jsp"/>
            <forward name="edit-report-redo" path="/WEB-INF/pages/session/reportForm.jsp"/>
            <forward name="edit-report-success" path="/WEB-INF/pages/session/reportSuccess.jsp"/>
            <forward name="delete-report" path="/WEB-INF/pages/session/deleteReportForm.jsp"/>
